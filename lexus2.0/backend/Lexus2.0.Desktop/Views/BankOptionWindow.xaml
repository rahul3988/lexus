<Window x:Class="Lexus2_0.Desktop.Views.BankOptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Option - Payment Methods" 
        Height="550" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkGrey}"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Payment Methods Configuration" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Foreground="{StaticResource TextWhite}" 
                  Margin="0,0,0,20"/>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Add/Edit Form -->
            <Border Grid.Column="0" 
                   Background="{StaticResource LightGrey}" 
                   Padding="20" 
                   CornerRadius="5">
                <StackPanel>
                    <!-- Tab Selection (Visual Tabs) -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button x:Name="BankTabButton" 
                               Content="Bank" 
                               Style="{StaticResource PrimaryButton}"
                               Click="TabButton_Click"
                               Tag="Bank"
                               Padding="20,8"
                               Margin="0,0,5,0"/>
                        <Button x:Name="DebitCardTabButton" 
                               Content="Debit Card" 
                               Style="{StaticResource SecondaryButton}"
                               Click="TabButton_Click"
                               Tag="DebitCard"
                               Padding="20,8"
                               Margin="0,0,5,0"/>
                        <Button x:Name="CreditCardTabButton" 
                               Content="Credit Card" 
                               Style="{StaticResource SecondaryButton}"
                               Click="TabButton_Click"
                               Tag="CreditCard"
                               Padding="20,8"/>
                    </StackPanel>
                    
                    <!-- Form Fields -->
                    <TextBlock x:Name="PaymentTypeLabel" 
                              Text="Bank Name:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="BankNameComboBox" 
                             Margin="0,0,0,15"
                             Background="{StaticResource DarkGrey}"
                             Foreground="{StaticResource TextWhite}">
                        <ComboBoxItem Content="SBI"/>
                        <ComboBoxItem Content="HDFC"/>
                        <ComboBoxItem Content="ICICI"/>
                        <ComboBoxItem Content="Axis"/>
                        <ComboBoxItem Content="PNB"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                    
                    <TextBlock Text="Username/Account ID:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="UsernameTextBox" 
                            Margin="0,0,0,15"
                            Background="{StaticResource DarkGrey}"
                            Foreground="{StaticResource TextWhite}"
                            Padding="8,6"/>
                    
                    <TextBlock Text="Password:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <PasswordBox x:Name="PasswordBox" 
                                Margin="0,0,0,15"
                                Background="{StaticResource DarkGrey}"
                                Foreground="{StaticResource TextWhite}"
                                Padding="8,6"/>
                    
                    <TextBlock Text="Name to Save:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="SaveNameTextBox" 
                            Margin="0,0,0,20"
                            Background="{StaticResource DarkGrey}"
                            Foreground="{StaticResource TextWhite}"
                            Padding="8,6"
                            ToolTip="Custom name to identify this payment method"/>
                    
                    <Button Content="Save/Add" 
                           Style="{StaticResource PrimaryButton}"
                           Click="SaveButton_Click"
                           Padding="15,8"
                           HorizontalAlignment="Stretch"/>
                    
                    <Button Content="Clear" 
                           Style="{StaticResource SecondaryButton}"
                           Click="ClearButton_Click"
                           Padding="15,8"
                           HorizontalAlignment="Stretch"
                           Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Right Panel: Saved Payment Methods List -->
            <Border Grid.Column="2" 
                   Background="{StaticResource LightGrey}" 
                   Padding="20" 
                   CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Saved Payment Methods" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextWhite}" 
                              Margin="0,0,0,15"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <ItemsControl x:Name="SavedPaymentsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource DarkGrey}" 
                                           BorderBrush="{StaticResource PrimaryBlue}" 
                                           BorderThickness="1" 
                                           CornerRadius="3" 
                                           Padding="12" 
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" 
                                                      Text="{Binding SaveName}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14" 
                                                      Foreground="{StaticResource TextWhite}"
                                                      Margin="0,0,0,5"/>
                                            
                                            <TextBlock Grid.Row="1" 
                                                      Text="{Binding PaymentTypeDisplay}" 
                                                      Foreground="{StaticResource LightBlue}"
                                                      Margin="0,0,0,3"/>
                                            
                                            <TextBlock Grid.Row="2" 
                                                      Text="{Binding BankNameDisplay}" 
                                                      Foreground="{StaticResource TextWhite}"
                                                      FontSize="12"/>
                                            
                                            <StackPanel Grid.Row="2" 
                                                       Orientation="Horizontal" 
                                                       HorizontalAlignment="Right"
                                                       Margin="0,5,0,0">
                                                <Button Content="Edit" 
                                                       Style="{StaticResource SecondaryButton}"
                                                       Tag="{Binding Id}"
                                                       Click="EditButton_Click"
                                                       Padding="10,5"
                                                       Margin="0,0,5,0"
                                                       FontSize="12"/>
                                                <Button Content="Delete" 
                                                       Style="{StaticResource SecondaryButton}"
                                                       Tag="{Binding Id}"
                                                       Click="DeleteButton_Click"
                                                       Padding="10,5"
                                                       FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <TextBlock x:Name="NoPaymentsTextBlock" 
                              Text="No payment methods saved yet." 
                              Foreground="{StaticResource LightBlue}" 
                              FontStyle="Italic"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Close" 
                   Style="{StaticResource SecondaryButton}"
                   Click="CloseButton_Click"
                   Padding="15,8"
                   MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

