<UserControl x:Class="Lexus2_0.Desktop.Views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Padding="10" Background="{StaticResource LightGrey}">
            <TextBlock Text="Options Menu - Automation &amp; System Tools" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource TextWhite}"/>
        </Border>
        
        <!-- Content Area with ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                
                <!-- Application Status Section -->
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Application Status" 
                                  Foreground="{StaticResource TextWhite}" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"/>
                        <TextBlock x:Name="StatusTextBlock" 
                                  Text="Ready" 
                                  Foreground="{StaticResource SuccessGreen}" 
                                  FontSize="14"/>
                    </StackPanel>
                </Border>
                
                <!-- Automation Control Section -->
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Automation Control" 
                                  Foreground="{StaticResource TextWhite}" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"/>
                        <Button x:Name="StopButton" 
                               Content="Stop Automation" 
                               Style="{StaticResource PrimaryButton}"
                               Click="StopButton_Click"
                               Visibility="Collapsed"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
                <!-- Backup & Restore Section -->
                <TextBlock Text="Backup &amp; Restore" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,10,0,10"/>
                
                <Button Content="Backup Restore" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BackupRestoreButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Captcha Configuration Section -->
                <TextBlock Text="Captcha Configuration" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="AutoFillCaptchaCheckBox" 
                                 Content="Auto Fill Captcha" 
                                 Foreground="{StaticResource TextWhite}"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                        <CheckBox x:Name="AutoSubmitCaptchaCheckBox" 
                                 Content="AutoSubmit Captcha After Fill" 
                                 Foreground="{StaticResource TextWhite}"
                                 Margin="0,5,0,0"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Payment Settings Section -->
                <TextBlock Text="Payment Settings" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="Steps Of Adv Payment" 
                       Style="{StaticResource SecondaryButton}"
                       Click="StepsOfAdvPaymentButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="BHIMUPI Direct Pay" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BhimUpiDirectPayButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Automation Behavior Section -->
                <TextBlock Text="Automation Behavior" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="AutoCloseAfterBookingCheckBox" 
                                 Content="Auto Close After Booking" 
                                 Foreground="{StaticResource TextWhite}"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                        <CheckBox x:Name="PaxCountdownBypassCheckBox" 
                                 Content="Pax Countdown Bypass" 
                                 Foreground="{StaticResource TextWhite}"
                                 Margin="0,5,0,0"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- System Information Section -->
                <TextBlock Text="System Information" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="Key Info /Version Check" 
                       Style="{StaticResource SecondaryButton}"
                       Click="KeyInfoVersionCheckButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="Show History" 
                       Style="{StaticResource SecondaryButton}"
                       Click="ShowHistoryButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Display & UI Section -->
                <TextBlock Text="Display &amp; UI" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="VideoModeCheckBox" 
                                 Content="Video Mode" 
                                 Foreground="{StaticResource TextWhite}"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                        <CheckBox x:Name="SmallWindowCheckBox" 
                                 Content="Small Window" 
                                 Foreground="{StaticResource TextWhite}"
                                 Margin="0,5,0,0"
                                 Checked="SettingChanged"
                                 Unchecked="SettingChanged"/>
                        <CheckBox x:Name="AlwaysOnTopCheckBox" 
                                 Content="Always On Top" 
                                 Foreground="{StaticResource TextWhite}"
                                 Margin="0,5,0,0"
                                 Checked="AlwaysOnTop_Changed"
                                 Unchecked="AlwaysOnTop_Changed"/>
                    </StackPanel>
                </Border>
                
                <!-- System Maintenance Section -->
                <TextBlock Text="System Maintenance" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="System Refresh" 
                       Style="{StaticResource SecondaryButton}"
                       Click="SystemRefreshButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="Optimize System..." 
                       Style="{StaticResource SecondaryButton}"
                       Click="OptimizeSystemButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="Clear Cache" 
                       Style="{StaticResource SecondaryButton}"
                       Click="ClearCacheButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="Open Logs Folder" 
                       Style="{StaticResource SecondaryButton}"
                       Click="OpenLogsFolderButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Account Management Section -->
                <TextBlock Text="Account Management" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="Create Irctc Id" 
                       Style="{StaticResource SecondaryButton}"
                       Click="CreateIrctcIdButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <Button Content="Reset Your Lexus ID" 
                       Style="{StaticResource SecondaryButton}"
                       Click="ResetLexusIdButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Login Configuration Section -->
                <TextBlock Text="Login Configuration" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="Disha Login on/off" 
                       Style="{StaticResource SecondaryButton}"
                       Click="DishaLoginButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Troubleshooting Section -->
                <TextBlock Text="Troubleshooting" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Button Content="Fail Issue Fix..." 
                       Style="{StaticResource SecondaryButton}"
                       Click="FailIssueFixButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       Padding="15,8"
                       MinWidth="250"/>
                
                <!-- Logs Section -->
                <TextBlock Text="Recent Logs" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource LightBlue}"
                          Margin="0,20,0,10"/>
                
                <Border Background="{StaticResource LightGrey}" Padding="15" CornerRadius="3" Margin="0,0,0,15">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogsTextBox" 
                                IsReadOnly="True" 
                                Background="{StaticResource DarkGrey}" 
                                Foreground="{StaticResource TextWhite}"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="11"/>
                    </ScrollViewer>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
