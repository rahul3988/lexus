<UserControl x:Class="Lexus2_0.Desktop.Views.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border Background="{StaticResource LightGrey}" 
           BorderBrush="{StaticResource PrimaryBlue}" 
           BorderThickness="0,1,0,0"
           Padding="10,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side: Status Information -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="DateTimeTextBlock" 
                          Text="{Binding CurrentDateTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                          Foreground="{StaticResource TextWhite}"
                          FontSize="12"
                          Margin="0,0,15,0"/>
                
                <TextBlock Text="Valid: " 
                          Foreground="{StaticResource TextWhite}"
                          FontSize="12"
                          Margin="0,0,3,0"/>
                <TextBlock x:Name="ValidCountTextBlock" 
                          Text="{Binding ValidCount, FallbackValue='2'}"
                          Foreground="{StaticResource SuccessGreen}"
                          FontSize="12"
                          FontWeight="Bold"
                          Margin="0,0,15,0"/>
                
                <CheckBox x:Name="Web2LoginCheckBox"
                         Content="Web2 Login"
                         Foreground="{StaticResource TextWhite}"
                         FontSize="12"
                         IsChecked="{Binding Web2LoginEnabled}"/>
            </StackPanel>
            
            <!-- Right Side: Logo & License Info -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="LEXUS" 
                          Foreground="{StaticResource PrimaryBlue}"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,0,10,0"/>
                
                <Border x:Name="PaidBadge" 
                       Background="{StaticResource SuccessGreen}" 
                       Padding="8,4"
                       CornerRadius="3">
                    <TextBlock Text="PAID" 
                              Foreground="{StaticResource TextWhite}"
                              FontSize="10"
                              FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

