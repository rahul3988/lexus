<Window x:Class="Lexus2_0.Desktop.Views.IrctcIdManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IRCTC ID Manager" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkGrey}"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="IRCTC ID Management" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Foreground="{StaticResource TextWhite}" 
                  Margin="0,0,0,20"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Add/Edit Form -->
            <Border Grid.Column="0" 
                   Background="{StaticResource LightGrey}" 
                   Padding="20" 
                   CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="IRCTC ID:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="IrctcIdTextBox" 
                            Margin="0,0,0,15"
                            Background="{StaticResource DarkGrey}"
                            Foreground="{StaticResource TextWhite}"
                            Padding="8,6"/>
                    
                    <TextBlock Text="Password:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <PasswordBox x:Name="PasswordBox" 
                                Margin="0,0,0,15"
                                Background="{StaticResource DarkGrey}"
                                Foreground="{StaticResource TextWhite}"
                                Padding="8,6"/>
                    
                    <TextBlock Text="Name to Save:" 
                              Foreground="{StaticResource TextWhite}" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="SaveNameTextBox" 
                            Margin="0,0,0,20"
                            Background="{StaticResource DarkGrey}"
                            Foreground="{StaticResource TextWhite}"
                            Padding="8,6"
                            ToolTip="Custom name to identify this IRCTC ID"/>
                    
                    <CheckBox x:Name="RememberMeCheckBox"
                             Content="Remember Me"
                             Foreground="{StaticResource TextWhite}"
                             Margin="0,0,0,20"/>
                    
                    <Button Content="Save/Add" 
                           Style="{StaticResource PrimaryButton}"
                           Click="SaveButton_Click"
                           Padding="15,8"
                           HorizontalAlignment="Stretch"/>
                    
                    <Button Content="Clear" 
                           Style="{StaticResource SecondaryButton}"
                           Click="ClearButton_Click"
                           Padding="15,8"
                           HorizontalAlignment="Stretch"
                           Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Right Panel: Saved IDs List -->
            <Border Grid.Column="2" 
                   Background="{StaticResource LightGrey}" 
                   Padding="20" 
                   CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Saved IRCTC IDs" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextWhite}" 
                              Margin="0,0,0,15"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <ItemsControl x:Name="SavedIdsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource DarkGrey}" 
                                           BorderBrush="{StaticResource PrimaryBlue}" 
                                           BorderThickness="1" 
                                           CornerRadius="3" 
                                           Padding="12" 
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" 
                                                      Text="{Binding SaveName}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14" 
                                                      Foreground="{StaticResource TextWhite}"
                                                      Margin="0,0,0,5"/>
                                            
                                            <TextBlock Grid.Row="1" 
                                                      Text="{Binding IrctcId}" 
                                                      Foreground="{StaticResource LightBlue}"
                                                      Margin="0,0,0,10"/>
                                            
                                            <StackPanel Grid.Row="2" 
                                                       Orientation="Horizontal" 
                                                       HorizontalAlignment="Right"
                                                       Margin="0,5,0,0">
                                                <Button Content="Edit" 
                                                       Style="{StaticResource SecondaryButton}"
                                                       Tag="{Binding Id}"
                                                       Click="EditButton_Click"
                                                       Padding="10,5"
                                                       Margin="0,0,5,0"
                                                       FontSize="12"/>
                                                <Button Content="Delete" 
                                                       Style="{StaticResource SecondaryButton}"
                                                       Tag="{Binding Id}"
                                                       Click="DeleteButton_Click"
                                                       Padding="10,5"
                                                       FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <TextBlock x:Name="NoIdsTextBlock" 
                              Text="No IRCTC IDs saved yet." 
                              Foreground="{StaticResource LightBlue}" 
                              FontStyle="Italic"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Close" 
                   Style="{StaticResource SecondaryButton}"
                   Click="CloseButton_Click"
                   Padding="15,8"
                   MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

