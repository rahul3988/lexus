<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.Data.ProxyIpSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock Text="Proxy IP Setting" FontSize="18" FontWeight="Bold" Foreground="{StaticResource White}" FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="15" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Add New Proxy" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="ProxyIpTextBox" Background="{StaticResource White}" Foreground="{StaticResource TextDark}" Padding="8,6" FontFamily="Segoe UI" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Text="IP:Port"/>
                            <TextBox Grid.Column="2" x:Name="ProxyPortTextBox" Background="{StaticResource White}" Foreground="{StaticResource TextDark}" Padding="8,6" FontFamily="Segoe UI" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Text="Port"/>
                            <Button Grid.Column="4" Content="Add" Style="{StaticResource PrimaryButton}" Click="AddProxyButton_Click" Padding="12,6" MinWidth="80"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Proxy IP List" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                <DataGrid x:Name="ProxyGrid" AutoGenerateColumns="False" Background="{StaticResource White}" Foreground="{StaticResource TextDark}" BorderBrush="{StaticResource PrimaryBlue}" GridLinesVisibility="All" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False" FontFamily="Segoe UI">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="IP Address" Binding="{Binding Ip}" Width="*"/>
                        <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Test" Style="{StaticResource SecondaryButton}" Click="TestProxy_Click" Tag="{Binding}" Padding="8,4" Margin="0,0,5,0" FontSize="11"/>
                                        <Button Content="Edit" Style="{StaticResource SecondaryButton}" Click="EditProxy_Click" Tag="{Binding}" Padding="8,4" Margin="0,0,5,0" FontSize="11"/>
                                        <Button Content="Delete" Style="{StaticResource SecondaryButton}" Click="DeleteProxy_Click" Tag="{Binding}" Padding="8,4" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                            <Setter Property="Foreground" Value="{StaticResource White}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

