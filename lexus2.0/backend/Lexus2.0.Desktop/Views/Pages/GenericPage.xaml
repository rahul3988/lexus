<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.GenericPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock x:Name="TitleTextBlock" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource White}" 
                      FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <TextBlock x:Name="DescriptionTextBlock" 
                          FontSize="14" 
                          Foreground="{StaticResource TextDark}" 
                          FontFamily="Segoe UI"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"/>
                
                <Border Background="{StaticResource BackgroundLightGrey}" 
                       Padding="20" 
                       CornerRadius="3" 
                       BorderBrush="{StaticResource PrimaryBlue}" 
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Configuration Panel" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource PrimaryBlue}" 
                                  FontFamily="Segoe UI"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="This feature is currently being configured. Full functionality will be available soon." 
                                  Foreground="{StaticResource TextDark}" 
                                  FontFamily="Segoe UI"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,15"/>
                        
                        <Button Content="Configure" 
                               Style="{StaticResource PrimaryButton}"
                               Click="ConfigureButton_Click"
                               HorizontalAlignment="Left"
                               Padding="15,8"
                               MinWidth="150"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

