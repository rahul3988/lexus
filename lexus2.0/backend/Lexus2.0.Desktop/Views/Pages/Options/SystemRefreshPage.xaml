<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.Options.SystemRefreshPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock Text="System Refresh" FontSize="18" FontWeight="Bold" Foreground="{StaticResource White}" FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Refresh Options" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        
                        <CheckBox x:Name="ClearCacheCheckBox" Content="Clear Application Cache" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ClearLogsCheckBox" Content="Clear Log Files" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                        <CheckBox x:Name="RefreshServicesCheckBox" Content="Refresh Services" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ReloadDataCheckBox" Content="Reload All Data" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" IsChecked="True" Margin="0,0,0,15"/>
                        
                        <Button x:Name="RefreshButton" Content="Refresh System" Style="{StaticResource PrimaryButton}" Click="RefreshButton_Click" HorizontalAlignment="Left" Padding="15,8" MinWidth="150"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="System Status" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        <TextBlock x:Name="StatusTextBlock" Text="Ready" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

