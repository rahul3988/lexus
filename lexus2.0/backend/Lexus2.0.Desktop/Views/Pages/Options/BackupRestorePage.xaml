<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.Options.BackupRestorePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock Text="Backup Restore" FontSize="18" FontWeight="Bold" Foreground="{StaticResource White}" FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Backup Data" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        <TextBlock Text="Create a backup of all application data, settings, and configurations." Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" TextWrapping="Wrap" Margin="0,0,0,15"/>
                        <Button Content="Create Backup" Style="{StaticResource PrimaryButton}" Click="CreateBackupButton_Click" HorizontalAlignment="Left" Padding="15,8" MinWidth="150"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Restore Data" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        <TextBlock Text="Restore application data from a previously created backup file." Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" TextWrapping="Wrap" Margin="0,0,0,15"/>
                        <Button Content="Restore from Backup" Style="{StaticResource PrimaryButton}" Click="RestoreBackupButton_Click" HorizontalAlignment="Left" Padding="15,8" MinWidth="150"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Export / Import" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Export Data" Style="{StaticResource PrimaryButton}" Click="ExportButton_Click" Padding="15,8"/>
                            <Button Grid.Column="2" Content="Import Data" Style="{StaticResource PrimaryButton}" Click="ImportButton_Click" Padding="15,8"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

