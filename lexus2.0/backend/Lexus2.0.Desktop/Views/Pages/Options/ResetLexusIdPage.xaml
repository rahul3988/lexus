<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.Options.ResetLexusIdPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock Text="Reset Your Lexus ID" FontSize="18" FontWeight="Bold" Foreground="{StaticResource White}" FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource ErrorRed}" BorderThickness="2" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="⚠️ Warning" FontSize="16" FontWeight="Bold" Foreground="{StaticResource ErrorRed}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                        <TextBlock Text="Resetting your Lexus ID will:" 
                                  Foreground="{StaticResource TextDark}" 
                                  FontFamily="Segoe UI"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="• Clear all saved credentials" 
                                  Foreground="{StaticResource TextDark}" 
                                  FontFamily="Segoe UI"
                                  Margin="20,0,0,5"/>
                        <TextBlock Text="• Remove authentication tokens" 
                                  Foreground="{StaticResource TextDark}" 
                                  FontFamily="Segoe UI"
                                  Margin="20,0,0,5"/>
                        <TextBlock Text="• Require re-authentication on next login" 
                                  Foreground="{StaticResource TextDark}" 
                                  FontFamily="Segoe UI"
                                  Margin="20,0,0,5"/>
                        <TextBlock Text="This action cannot be undone!" 
                                  Foreground="{StaticResource ErrorRed}" 
                                  FontFamily="Segoe UI"
                                  FontWeight="Bold"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Confirm Reset" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Type 'RESET' to confirm:" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,5"/>
                        <TextBox x:Name="ConfirmTextBox" Background="{StaticResource White}" Foreground="{StaticResource TextDark}" Padding="8,6" FontFamily="Segoe UI" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15"/>
                        
                        <Button Content="Reset Lexus ID" Style="{StaticResource PrimaryButton}" Click="ResetButton_Click" HorizontalAlignment="Left" Padding="15,8" MinWidth="150" Background="{StaticResource ErrorRed}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

