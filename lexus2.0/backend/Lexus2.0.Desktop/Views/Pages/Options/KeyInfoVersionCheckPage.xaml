<UserControl x:Class="Lexus2_0.Desktop.Views.Pages.Options.KeyInfoVersionCheckPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="{StaticResource BackgroundWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <TextBlock Text="Key Info / Version Check" FontSize="18" FontWeight="Bold" Foreground="{StaticResource White}" FontFamily="Segoe UI"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel>
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Application Information" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Application Name:" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="LEXUS 2.0" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Version:" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            <TextBlock x:Name="VersionTextBlock" Grid.Row="1" Grid.Column="1" Text="2.0.0" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Build Date:" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            <TextBlock x:Name="BuildDateTextBlock" Grid.Row="2" Grid.Column="1" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="License Status:" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            <TextBlock x:Name="LicenseStatusTextBlock" Grid.Row="3" Grid.Column="1" Text="PAID" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Token Status:" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TokenStatusTextBlock" Grid.Row="4" Grid.Column="1" Text="Not Validated" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" Margin="0,0,0,10"/>
                        </Grid>
                        
                        <Button Content="Check for Updates" Style="{StaticResource PrimaryButton}" Click="CheckUpdatesButton_Click" HorizontalAlignment="Left" Padding="15,8" MinWidth="150" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource BackgroundLightGrey}" Padding="20" CornerRadius="3" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="System Information" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" FontFamily="Segoe UI" Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="SystemInfoTextBlock" Foreground="{StaticResource TextDark}" FontFamily="Segoe UI" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

